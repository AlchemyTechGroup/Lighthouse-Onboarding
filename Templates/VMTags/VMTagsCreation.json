{
    "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "rbacGuid": {
            "type": "string",
            "defaultValue": "[newGuid()]"
        },
        "customerName": {
            "type": "string",
            "defaultValue": "ATGLHCustomer"
        },
        "tagCustomerName": {
            "type": "string",
            "defaultValue": "ATGCustomer"
        },
        "tagImgName": {
            "type": "string",
            "defaultValue": "vmtype"
        },
        "tagImgNameValue": {
            "type": "string",
            "defaultValue": "MasterImage"
        },
        "tagName": {
            "type": "string",
            "defaultValue": "ManagedByTenant"
        },
        "tagNameValue": {
            "type": "string",
            "defaultValue": "AlchemyLighthouse"
        },
        "tag1Name": {
            "type": "string",
            "defaultValue": "CtxAPIkey"
        },
        "tag1NameValue": {
            "type": "string",
            "defaultValue": ""
        },
        "tag2Name": {
            "type": "string",
            "defaultValue": "CtxAPISecret"
        },
        "tag2NameValue": {
            "type": "string",
            "defaultValue": ""
        },
        "tag3Name": {
            "type": "string",
            "defaultValue": "CtxCustomerID"
        },
        "tag3NameValue": {
            "type": "string",
            "defaultValue": ""
        },
        "tag4Name": {
            "type": "string",
            "defaultValue": "ATGCtxHostConnResource"
        },
        "tag4NameValue": {
            "type": "string",
            "defaultValue": ""
        },
        "tag5Name": {
            "type": "string",
            "defaultValue": "ATGCtxSIGImgDef"
        },
        "tag5NameValue": {
            "type": "string",
            "defaultValue": ""
        },
        "tag6Name": {
            "type": "string",
            "defaultValue": "ATGCtxSIG"
        },
        "tag6NameValue": {
            "type": "string",
            "defaultValue": "acg_lh_atg_imagegallery"
        },
        "tag7Name": {
            "type": "string",
            "defaultValue": "ATGCtxMachineCatalog"
        },
        "tag7NameValue": {
            "type": "string",
            "defaultValue": ""
        },
        "ResourceGroupName": {
            "type": "string",
            "defaultValue": "rg-vm-lh-atg-images"
        }
    },
    "variables": {
        "policyDefinitionName": "ATGLH Tags Policy - VM -Definition",
        "policyAssignmentName": "ATGLH Tags Policy - VM",
        "rbacContributor": "b24988ac-6180-42a0-ab88-20f7382dd24c",
        "ResourceGroup": "[parameters('ResourceGroupName')]"
    },
    "resources": [
        {
            "type": "Microsoft.Authorization/policyDefinitions",
            "apiVersion": "2018-03-01",
            "name": "[variables('policyDefinitionName')]",
            "location": "[deployment().location]",
            "properties": {
                "description": "ATGLH Tags Policy - VM",
                "displayName": "[variables('policyDefinitionName')]",
                "policyType": "Custom",
                "mode": "All",
                "policyRule": {
                    "if": {
                        "allOf": [
                            {
                                "field": "type",
                                "equals": "Microsoft.Compute/virtualMachines"
                            }
                        ]
                    },
                    "then": {
                        "effect": "modify",
                        "details": {
                            "roleDefinitionIds": [
                                "/providers/Microsoft.Authorization/roleDefinitions/b24988ac-6180-42a0-ab88-20f7382dd24c"
                            ],
                            "operations": [
                                {
                                    "operation": "addOrReplace",
                                    "field": "[concat('tags[', parameters('tagCustomerName'), ']')]",
                                    "value": "[parameters('customerName')]"
                                },
                                {
                                    "operation": "addOrReplace",
                                    "field": "[concat('tags[', parameters('tagName'), ']')]",
                                    "value": "[parameters('tagNameValue')]"
                                },
                                {
                                    "operation": "addOrReplace",
                                    "field": "[concat('tags[', parameters('tag1Name'), ']')]",
                                    "value": "[parameters('tag1NameValue')]"
                                },
                                {
                                    "operation": "addOrReplace",
                                    "field": "[concat('tags[', parameters('tag2Name'), ']')]",
                                    "value": "[parameters('tag2NameValue')]"
                                },
                                {
                                    "operation": "addOrReplace",
                                    "field": "[concat('tags[', parameters('tag3Name'), ']')]",
                                    "value": "[parameters('tag3NameValue')]"
                                },
                                {
                                    "operation": "addOrReplace",
                                    "field": "[concat('tags[', parameters('tag4Name'), ']')]",
                                    "value": "[parameters('tag4NameValue')]"
                                },
                                {
                                    "operation": "addOrReplace",
                                    "field": "[concat('tags[', parameters('tag5Name'), ']')]",
                                    "value": "[parameters('tag5NameValue')]"
                                },
                                {
                                    "operation": "addOrReplace",
                                    "field": "[concat('tags[', parameters('tag6Name'), ']')]",
                                    "value": "[parameters('tag6NameValue')]"
                                },
                                {
                                    "operation": "addOrReplace",
                                    "field": "[concat('tags[', parameters('tag7Name'), ']')]",
                                    "value": "[parameters('tag7NameValue')]"
                                },
                                {
                                    "operation": "addOrReplace",
                                    "field": "[concat('tags[', parameters('tagImgName'), ']')]",
                                    "value": "[parameters('tagImgNameValue')]"
                                }
                            ]
                        }
                    }
                }
            }
        }
    ]
}